<%= bootstrap_form_for :comment, url: comments_path, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10" do |f| %>

<% if @comment.errors.any? %>
        <div id="error_explanation" class="alert alert-warning" role="alert">
            <ul>
                <% @comment.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <%= f.text_field :email, label: "Email"%>
    <%= f.text_area :content, label: "Message" %>
    <%= f.form_group do %>
        <%= f.submit "Save", class: "btn btn-success" %>
        <%= link_to "Cancel", comments_path, :class => "btn btn-default" %>
    <% end %>    
<% end %>