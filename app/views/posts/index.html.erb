<h3>Latest posts:</h3>
   
<table class="table table-responsive">
  <tr class="warning">
    <th>Author</th>
    <th>Title</th>
    <th>Content</th>
    <th colspan="3"></th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.author %></td>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= link_to 'See', post_path(post.id) %></td>
      <td><%= link_to 'Edit', edit_post_path(post.id) %></td>
      <td><%= link_to 'Remove', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
    </tr>
  <% end %>
</table>

<%= link_to 'Create new post', new_post_path, :class => "btn btn-success" %>
<%= link_to 'See comments', comments_path, :class => "btn btn-success" %>
